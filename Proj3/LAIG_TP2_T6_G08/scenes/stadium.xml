            </children>
        </component>

        <component id="table_leg0">
            <transformation>
                <translate x="3.5" y="0" z="-3.5" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
